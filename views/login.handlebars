<!doctype html>
<html>
    <head>
        <title>Asian American Association</title>
        
        <link href='//fonts.googleapis.com/css?family=Raleway:400,300,200,100' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <link rel='stylesheet' href='/stylesheets/style.css'>
        <script src='/javascripts/jquery.js'></script>
        <script src='/javascripts/handlebars.js'></script>
        <script src='/javascripts/script.js'></script>
    </head>
    <body>
        <nav>
            <div class='transition' id='nav-title'>
                <a class='link' href='/'>
                    <h1>AAA</h1>
                    <h2>@UC Berkeley</h2>
                </a>
            </div>
            <ul>
                <li><a class ='link' id='events' href='/events'>Events</a></li>
                <li><a class ='link' id='families' href='/families'>Families</a></li>
                <li><a class ='link' id='committees' href='/committees'>Committees</a></li>
                <li><a class ='link' id='cabinet' href='/cabinet'>Cabinet</a></li>
                <li><a class ='link' id='media' href='/media'>Media</a></li>
            </ul>
            
            <div class='transition' id='login-button'>
                <div id='admin'><a class='link' href='/login'>Log in</a></div>
                <div id='login-pip' class='transition'><a class='link' href='/signup'>Sign up</a></div>
            </div>
        </nav>
        <div id='login-wrapper'>
            <header>
                <div class='dark-overlay-01'>
                    <div id='header-title'>Asian American Association</div>
                </div>
            </header>
            <main class='login-main'>
                <div class="container">

                    <div class="col-sm-6 col-sm-offset-3">

                        <h1><span class="fa fa-sign-in"></span> Login</h1>

                        <!-- show any messages that come back with authentication -->
                        {{#if message.length}}
                            <div class="alert alert-danger">{{ message }}</div>
                        {{/if}}

                        <!-- LOGIN FORM -->
                        <form action="/login" method="post">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>

                            <button type="submit" class="btn btn-warning btn-lg">Login</button>
                        </form>

                        <hr>

                        <p>Need an account? <a href="/signup">Signup</a></p>
                        <p>Or go <a href="/">home</a>.</p>

                    </div>

                </div>
            </main>
        </div>
    </body>
</html>
